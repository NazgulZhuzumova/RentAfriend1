<h1 class="text-center pt-5">There are <%= Friend.count %> Friends Available Now</h1>

<h2 class="list-group-item list-group-item-warning text-center p-3 m-5"><%= link_to "Make a new friend!", new_friend_path %></h2>


<div class="index-cards">
  <% @friends.each do |friend| %>
    <%= link_to friend_path(friend) do %>
    <div class="friend-card">
    <% if friend.photo.attached? %>
      <%= cl_image_tag friend.photo.key,
        width: 400, height: 300, crop: :fill %>
    <% end %>
      <div class="friend-info">
        <h4> <%= friend.name %></h4>
        <p>Age: <%= friend.age %></p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>


<%= link_to "Back to homepage", root_path %>
