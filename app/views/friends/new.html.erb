<h1 class="p-5 text-center text-uppercase"> List a new friend!</h1>
<div class="container">
    <div class="card mx-auto" style="width: 550px">
      <div class="card-body">

      <%= simple_form_for(@friend) do |f| %>

        <%= f.input :name, label_html: { class: "fw-normal" } %>

        <%= f.input :age %>

        <%= f.input :gender %>

        <%= f.input :interest %>

        <%= f.input :location %>

        <%= f.input :price %>

        <%= f.input :photo, as: :file %>

        <%= f.input :bio %>

        <%= f.submit %>

      <% end %>

      <%= link_to "Go back", friends_path, class: "btn btn-gradient mt-5" %>
      </div>
    </div>
</div>
