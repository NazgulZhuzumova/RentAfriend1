<h1 class="text-center p-5"><%= @friend.name %> | <%= @friend.age %> years old</h1>

<div class="d-flex justify-content-around">
    <% if @friend.photo.attached? %>
      <%= cl_image_tag @friend.photo.key,
        width: 400, height: 300, crop: :fill %>
    <% end %>
<ul>
  <li class="list-group-item list-group-item-warning"><%= @friend.gender %></li>
  <li class="list-group-item list-group-item-warning">lives around: <%= @friend.location %></li>
  <li class="list-group-item list-group-item-warning">is interested in: <%= @friend.interest %></li>
</ul>
</div>

